<UserControl x:Class="ManagerApp.UserControls.Update"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManagerApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Black" BorderThickness="2" Padding="30">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <!-- First Name -->
            <TextBlock Text="First name" FontSize="18" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Margin="0,5" Height="40" FontSize="16"/>

            <!-- Last Name -->
            <TextBlock Grid.Row="1" Text="Last name" FontSize="18" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="0,5" Height="40" FontSize="16"/>

            <!-- City -->
            <TextBlock Grid.Row="2" Text="City" FontSize="18" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="2" Grid.Column="1" Height="40" Margin="0,5" FontSize="16">
                <ComboBoxItem Content="Select"/>
                <ComboBoxItem Content="Tel Aviv"/>
                <ComboBoxItem Content="Jerusalem"/>
                <ComboBoxItem Content="Haifa"/>
            </ComboBox>

            <!-- Telephone -->
            <TextBlock Grid.Row="3" Text="Telephone" FontSize="18" VerticalAlignment="Center"/>
            <TextBox Grid.Row="3" Grid.Column="1" Margin="0,5" Height="40" FontSize="16"/>

            <!-- Address -->
            <TextBlock Grid.Row="4" Text="Address" FontSize="18" VerticalAlignment="Center"/>
            <TextBox Grid.Row="4" Grid.Column="1" Margin="0,5" Height="40" FontSize="16"/>

            <!-- Picture -->
            <TextBlock Grid.Row="5" Text="Picture" FontSize="18" VerticalAlignment="Center"/>
            <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="0,5">
                <TextBox Width="300" Height="40" FontSize="16"/>
                <Button Content="Button" Width="100" Height="40" Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="6" Grid.ColumnSpan="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,20,0,0">
                <Button Content="Restart" Width="150" Height="50" FontSize="18" Margin="20,0"/>
                <Button Content="Post" Width="150" Height="50" FontSize="18" Margin="20,0"/>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
