<UserControl x:Class="ManagerApp.UserControls.Unit_SubjectManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManagerApp.UserControls"
             xmlns:conv="clr-namespace:ManagerApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1000">
    <UserControl.Resources>
        <FontFamily x:Key="SpecialElite">/Fonts/#Special Elite</FontFamily>
        <Style TargetType="{x:Type Button}" x:Key="ImageButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <conv:URIConvertor x:Key="urlConvertor"></conv:URIConvertor>
    </UserControl.Resources>
    <Canvas>

        <ListView x:Name="ListViewUnit" Height="500"
                  Width="920"
                  Canvas.Top="30"
                  Canvas.Left="26"
                  >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black"
        
        BorderThickness="1" 
        Height="83" 
        Canvas.Left="23" 
        Canvas.Top="21"
        Width="880">
                        <Canvas Width="840"
        Margin="0,0,0,23">
                            <Image Source="{Binding UnitPicture,
            Converter={StaticResource urlConvertor} }"
         x:Name="imageBook"
               Width="50"
               Height="68"
               Canvas.Left="10"
               Canvas.Top="5"/>

                            <Button x:Name="btnInfo"
                 Height="32" 
                 Canvas.Left="540" 
                 Canvas.Top="25"
                 Width="32"
                 Style="{StaticResource ImageButtonStyle}">
                                <Image Source="/Images/Information.png"/>
                            </Button>
                            <Button x:Name="btnEdit"
             Canvas.Left="585"
             Canvas.Top="25"
             Width="32"
             Style="{StaticResource ImageButtonStyle}" 
             HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Image Source="/Images/Update.png" />
                            </Button>
                            <Button x:Name="btnDelete"
                  Canvas.Left="630"
                  Canvas.Top="25"
                  Width="32"
                  Style="{StaticResource ImageButtonStyle}" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Image Source="/Images/UpdateDelete.png" />
                            </Button>
                            <Label x:Name="labelBookTitele"
               Content="{Binding UnitName}"
               Canvas.Left="77"
               Canvas.Top="22"
               Width="450"
               FontSize="30" 
               FontFamily="{StaticResource SpecialElite}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Canvas>

                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Canvas>
</UserControl>
