@using FirstOrderKitModel
@model List<ReportsViewModel>
@{
    ViewData["Title"] = "ManagerPage";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}
<link href="~/styles/managerpage.css" rel="stylesheet" />

<header class="header">
    <h1>Meitav test</h1>
    <a href="#" class="login-link">Log in</a>
</header>

<hr class="divider">

<div class="container">

    <!-- Left graph -->
    <div class="left-section">
        <img src="https://via.placeholder.com/220x150?text=Graph" class="graph-img" alt="Graph">
        <button class="btn reports-btn">Reports</button>
    </div>

    <!-- Middle section -->
    <div class="middle-section">

        <button class="btn profile-btn">Profile update</button>

        <select class="select-box">
            <option>Select</option>
        </select>

        <p class="label">Add questions</p>
    </div>

    <!-- Right text block -->
    <div class="right-section">
        <div class="text-block"></div>
        <p class="students-label">Text to students</p>
    </div>

</div>


